package com.project.testcases;
import org.testng.annotations.Test;

import com.project.pages.RegistrationPage;

import org.testng.annotations.BeforeClass;
import org.testng.annotations.AfterClass;

public class RegistrationPageTest {

  RegistrationPage regObj;
  
  @Test(priority=1)
  public void registration() {
	  regObj.registration("nirmal","wwwwxxxx@yahoo.com","1234","12345","1234");
	  if(regObj.submitButtun().isEnabled())
	  {
		  regObj.submitButtun().click();
		  regObj.driver.switchTo().alert().accept();
		  System.out.println("Registration Successful !!");  
	  }
	  else
	  {
		  System.out.println("Email is already Register ");
	  }	  
  }
  @Test(priority=2)
  public void reRegistration()
  {
	  regObj.registration("nirmal","wwww@yahoo.com","1234","12345","1234");
	  if(regObj.submitButtun().isEnabled())	  
	  {
		  regObj.submitButtun().click();
		  regObj.driver.switchTo().alert().accept();		  
	  }
	  else {
		  System.out.println("Email is already Register ");
	  }
  } 
  @BeforeClass
  public void beforeClass() {
	  System.setProperty("webdriver.chrome.driver", "files/chromedriver.exe");
	  regObj=new RegistrationPage();
	  regObj.initializeBrowser();
	  
  }
  @AfterClass
  public void afterClass() {
	  regObj.closeBrowser();  
  }
}
