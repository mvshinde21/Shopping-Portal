package trackorder.pages;

import static org.testng.Assert.assertEquals;

import java.util.Iterator;
import java.util.Set;
import java.util.concurrent.TimeUnit;


import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

public class TrackOrderPage
{
	WebDriver driver;
	
	String baseurl = "http://localhost/shopping";
	
	
	
	public void getsite() 
	{
		 System.setProperty("webdriver.chrome.driver", "resources/chromedriver.exe");
		 driver = new ChromeDriver();
		 driver.get(baseurl);
		 driver.manage().window().maximize();
	}
	
	public void login(String emailid, String password)
	{
		driver.manage().timeouts().implicitlyWait(10,TimeUnit.SECONDS);
		WebElement loginpage = driver.findElement(By.xpath("/html/body/header/div[1]/div/div/div[1]/ul/li[4]/a"));
		loginpage.click();
		WebElement login= driver.findElement(By.name("login"));
		JavascriptExecutor js = (JavascriptExecutor) driver;
		js.executeScript("arguments[0].scrollIntoView();",login); 
		
		driver.findElement(By.id("exampleInputEmail1")).sendKeys(emailid);
		driver.findElement(By.id("exampleInputPassword1")).sendKeys(password);
		login.click();
	}
	public void enteringEmail(String emailid)
	{
		
		
		WebElement emailid_text_area= driver.findElement(By.name("email"));
		emailid_text_area.sendKeys(emailid);
		
	}
	public void enteringOrderId(String orderId)
	{
		WebElement trackorder = driver.findElement(By.xpath("//span[text() = 'Track Order']"));
		trackorder.click();
		WebElement orderid_text_area= driver.findElement(By.name("orderid"));
		orderid_text_area.sendKeys(orderId);
		
	}
	public void tracking() 
	{
		WebElement Track = driver.findElement(By.xpath("//button[text() = 'Track']"));
		Track.click();
	
		driver.findElement(By.xpath("//a[@title='Track order']")).click();
		String parent=driver.getWindowHandle();
		
		Set<String>s=driver.getWindowHandles();

		// Now iterate using Iterator
		Iterator<String> I1= s.iterator();
		String actualTitle ;
		String expectedTitle = "Order Tracking Details";
		while(I1.hasNext())
		{

		String child_window=I1.next();


		if(!parent.equals(child_window))
		{
		driver.switchTo().window(child_window);

		actualTitle = driver.switchTo().window(child_window).getTitle();
		assertEquals(expectedTitle, actualTitle);
		}
		}
		
		
	
	}
	public void closeBrowser()
	{
		driver.quit();
	}
	
	
	
}
