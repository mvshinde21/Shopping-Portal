package com.project.testcases;

import org.testng.annotations.Test;

import com.project.pages.LoginPage;
import org.testng.annotations.BeforeClass;
import org.dom4j.DocumentException;
import org.testng.annotations.AfterClass;



	public class MLoginPageTest {
	MLoginPage loginObj;
	@Test(priority=1)
	public void loginWithValidCredentials() throws DocumentException, InterruptedException {
		// loginObj.LoginDataCredentials();
		// System.out.println((loginObj.emailid+loginObj.password));
		String s1=(loginObj.getTitle());
		loginObj.logIn("nirmal@yahoo.com", "1234");
		// System.out.println(loginObj.getTitle());
		if(s1!=loginObj.getTitle())
		{
		System.out.println("login successful");
		loginObj.logOut();
		}
		else
		System.out.println("Invalid Credentials");
	
	
	}
	@Test(priority=2)
	public void loginWithInvalidUserid() {
		
		loginObj.logIn("nirmalyahoo.com", "12345");
		
		if(loginObj.errorMessage().isDisplayed())
		System.out.println("Invalid UserId");
		else
		loginObj.logOut();
		
		}
		@Test(priority=3)
		public void loginWithInvalidPassword() {
		loginObj.logIn("nirmal@yahoo.com", "12345");
		if(loginObj.errorMessage().isDisplayed())
		System.out.println("Invalid Password");
		else
		loginObj.logOut();
	
	}
	@Test(priority=4)
	public void loginWithInvalidUseridOrPassword() {
	loginObj.logIn("nirmal@yahoo.com", "12345");
	if(loginObj.errorMessage().isDisplayed())
	System.out.println("Invalid Userid or Password");
	else
	loginObj.logOut();
	
	}
	@BeforeClass
	public void beforeClass() {
	loginObj = new MLoginPage();
	loginObj.initializeBrowser();
	loginObj.driver.get(loginObj.baseUrl);
	
	}
	
	@AfterClass
	public void afterClass() {
	loginObj.closeBrowser();
	
	}
	
	

}